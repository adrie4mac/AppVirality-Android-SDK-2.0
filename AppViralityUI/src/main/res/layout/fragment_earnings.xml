<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c9c9c9"
    android:fillViewport="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <TableLayout
            android:id="@+id/appvirality_user_earnings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/user_settings">

            <TableRow
                android:id="@+id/tr_earnings_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/earnings_label"
                    android:textColor="#ffffff" />
            </TableRow>

            <LinearLayout
                android:id="@+id/appvirality_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="#ffffff"
                android:gravity="center">

                <ProgressBar
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/appvirality_userearnings_network_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/appvirality_no_network_message"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/appvirality_earnings_reload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_enabled"
                    android:padding="8dp"
                    android:text="@string/appvirality_btn_reload"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/all_earnings_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </TableLayout>

        <LinearLayout
            android:id="@+id/coupon_pool_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appvirality_user_earnings"
            android:layout_marginTop="10dp"
            android:background="@drawable/user_settings"
            android:orientation="vertical"
            android:visibility="?attr/av_show_coupon_pools_bar">

            <LinearLayout
                android:id="@+id/coupon_pools_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="@string/select_from_coupon_pool"
                    android:textColor="#ffffff" />

                <ImageView
                    android:id="@+id/coupon_pools_dropdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_margin="10dp"
                    android:background="@drawable/drop_down_img" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/coupon_pools_tbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/coupon_pool_progress_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/user_settings"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/coupon_pool_no_coupons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/no_coupon_pool"
                    android:textColor="#000000"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/coupon_pool_progressbar"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/coupon_pool_network_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/appvirality_no_network_message"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/coupon_pool_reload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_enabled"
                    android:padding="8dp"
                    android:text="@string/appvirality_btn_reload"
                    android:textColor="#ffffff" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/custom_url_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/coupon_pool_layout"
            android:layout_marginTop="10dp"
            android:background="@drawable/user_settings"
            android:orientation="vertical"
            android:visibility="?attr/av_show_custom_ref_code_bar">

            <LinearLayout
                android:id="@+id/appvirality_custom_link_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/appvirality_details"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="@string/personal_url_label"
                    android:textColor="#ffffff" />

                <ImageView
                    android:id="@+id/appvirality_dropdown1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_margin="10dp"
                    android:background="@drawable/drop_down_img" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/appvirality_custom_link_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <!--<LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/edittext_bg"
                    android:orientation="horizontal"
                    android:padding="8dp">-->

                    <EditText
                        android:id="@+id/appvirality_custom_param"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:minWidth="120dp"
                        android:background="@drawable/edittext_bg"
                        android:cursorVisible="true"
                        android:digits="0123456789qwertzuiopasdfghjklyxcvbnm"
                        android:maxLength="10"
                        android:textColor="#000000"
                        android:textSize="15sp" />

                    <!--<TextView
                        android:id="@+id/tv_ref_code_fixed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp" />

                </LinearLayout>-->

                <Button
                    android:id="@+id/appvirality_savelink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn"
                    android:enabled="false"
                    android:text="@string/save_label"
                    android:textColor="#ffffff" />

                <ProgressBar
                    android:id="@+id/appvirality_progressbar"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:visibility="invisible" />
            </LinearLayout>

            <!--<LinearLayout
                android:id="@+id/appvirality_custom_link_btn_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/av_ui_textarea"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/appvirality_custom_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/share_url_label"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_friends_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/custom_url_layout"
            android:layout_marginTop="10dp"
            android:background="@drawable/user_settings"
            android:orientation="vertical"
            android:visibility="?attr/av_show_friends_bar">

            <LinearLayout
                android:id="@+id/appvirality_settings_friends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="@string/your_friends_label"
                    android:textColor="#ffffff" />

                <ImageView
                    android:id="@+id/appvirality_dropdown2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_margin="10dp"
                    android:background="@drawable/drop_down_img" />
            </LinearLayout>

            <TableLayout
                android:id="@+id/appvirality_tblrewarded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:shrinkColumns="1"
                android:stretchColumns="1" />

            <LinearLayout
                android:id="@+id/appvirality_progress_friends_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/user_settings"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/appvirality_no_friends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/no_friends_label"
                    android:textColor="#000000"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/appvirality_progressbar_friends"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_friends_network_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/appvirality_no_network_message"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/user_friends_reload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_enabled"
                    android:padding="8dp"
                    android:text="@string/appvirality_btn_reload"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/user_coupons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_friends_layout"
            android:layout_marginTop="10dp"
            android:background="@drawable/user_settings"
            android:orientation="vertical"
            android:visibility="?attr/av_show_coupons_bar">

            <LinearLayout
                android:id="@+id/appvirality_coupons_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:text="@string/my_coupons_label"
                    android:textColor="#ffffff" />

                <ImageView
                    android:id="@+id/appvirality_dropdown_coupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_margin="10dp"
                    android:background="@drawable/drop_down_img" />
            </LinearLayout>

            <TableLayout
                android:id="@+id/appvirality_tblcoupons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:stretchColumns="0,1" />

            <LinearLayout
                android:id="@+id/appvirality_progress_coupon_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/user_settings"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/appvirality_nocoupons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/no_coupons_label"
                    android:textColor="#000000"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/appvirality_progressbar_cpn"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_coupons_network_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="@string/appvirality_no_network_message"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/user_coupons_reload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_enabled"
                    android:padding="8dp"
                    android:text="@string/appvirality_btn_reload"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:visibility="gone" />
    </RelativeLayout>

</ScrollView>